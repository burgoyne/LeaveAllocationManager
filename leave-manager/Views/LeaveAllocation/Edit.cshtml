@model leave_manager.Models.EditLeaveAllocationViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editing @Model.LeaveType.Name Leave</h1>
<h5>for @Model.Employee.LastName, @Model.Employee.FirstName</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="EmployeeId" />
            </div>
            <div class="form-group">
                <label asp-for="NumberOfDays" class="control-label"></label>
                <input asp-for="NumberOfDays" class="form-control" />
                <span asp-validation-for="NumberOfDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-success" /> <a class="btn btn-outline-secondary" asp-action="ListEmployees">Back to List</a>
            </div>
        </form>
    </div>
</div>